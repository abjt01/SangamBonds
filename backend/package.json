{
  "name": "sangambonds-backend",
  "version": "2.0.0",
  "description": "SangamBonds Backend API Server",
  "main": "server.js",
  "scripts": {
    "start": "NODE_ENV=production PORT=3001 node server.js",
    "dev": "NODE_ENV=development PORT=3001 nodemon server.js",
    "test": "jest --detectOpenHandles",
    "test:watch": "jest --watch --detectOpenHandles",
    "lint": "eslint . --ext .js --ignore-path .eslintignore",
    "lint:fix": "eslint . --ext .js --fix --ignore-path .eslintignore",
    "format": "prettier --write \"**/*.js\"",
    "seed": "node utils/seedDatabase.js"
  },
  "keywords": [
    "api",
    "backend",
    "nodejs",
    "express",
    "mongodb",
    "bonds",
    "trading"
  ],
  "author": "SangamBonds Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.5.4",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "compression": "^1.7.4",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.3.1",
    "multer": "1.4.4",
    "nodemailer": "^6.9.5",
    "socket.io": "^4.7.2",
    "winston": "^3.10.0",
    "morgan": "^1.10.0",
    "moment": "^2.29.4",
    "lodash": "^4.17.21",
    "uuid": "^9.0.0",
    "validator": "^13.11.0",
    "express-mongo-sanitize": "^2.2.0",
    "hpp": "^0.2.3"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.47.0",
    "prettier": "^3.0.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "**/*.js",
      "!node_modules/**"
    ],
    "testTimeout": 30000
  }
}